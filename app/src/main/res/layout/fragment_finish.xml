<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="50dp"
    android:background="#f3f4f5">

    <ImageView
        android:id="@+id/finish_nut_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/finish_nut_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTheme"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/finish_nut_iv"
        app:layout_constraintLeft_toRightOf="@id/finish_nut_iv"
        tools:text="+10" />

    <TextView
        android:id="@+id/finish_tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="打卡成功"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/finish_nut_iv" />

    <TextView
        android:id="@+id/finish_tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/finish_tv_success"
        tools:text="今日任务完成(2021-01-02)" />

    <TextView
        android:id="@+id/finish_tv_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTheme"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/finish_tv_today"
        tools:text="做完物理试卷" />

    <TextView
        android:id="@+id/finish_tv_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/finish_tv_todo"
        app:layout_constraintTop_toTopOf="@id/finish_tv_todo" />

    <Button
        android:id="@+id/finish_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_finsh_close"
        android:padding="12dp"
        android:text="关闭"
        android:textColor="#c4c4cb"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/finish_tv_finished" />

</androidx.constraintlayout.widget.ConstraintLayout>